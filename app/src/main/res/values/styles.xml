<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeadingText">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AllText">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>
    <style name="LabelText" parent="AllText">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">@dimen/layout_normal</item>
    </style>
    <style name="SubheadingText" parent="LabelText">
        <item name="android:layout_marginBottom">@dimen/layout_normal</item>
    </style>
    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextColor">@android:color/primary_text_dark</item>
        <item name="colorControlNormal">@android:color/primary_text_dark</item>
    </style>
</resources>